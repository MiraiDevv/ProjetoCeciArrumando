@model IEnumerable<meuProjeto.Models.Book>

@{
ViewData["Title"] = "Books";
}

<h1>@ViewData["Title"]</h1>

<div class="mb-3">
    <a class="btn btn-primary" asp-action="Create">Add New Book</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Título</th>
            <th>Autor</th>
            <th>Gênero</th>
            <th>Ano</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var book in Model)
        {
        <tr>
            <td>@book.Titulo</td>
            <td>@book.Autor</td>
            <td>@book.Genero</td>
            <td>@book.Year</td>
            <td>
                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@book.Id">Details</a>
                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@book.Id">Edit</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@book.Id">Delete</a>
            </td>
        </tr>
        }
        </tbody>
    </table>
</div>
